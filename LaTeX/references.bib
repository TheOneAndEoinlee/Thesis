   keywords = {A New Kind of Science,CNN,Cellular Automata,Cellular Neural Networks,Cellular Nonlinear Networks,Complexity,Linearly Separable Rules,Local Rule,S. Wolfram,Threshold of complexity},
   pages = {2655-2766},
