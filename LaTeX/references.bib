   publisher = {SPIE},
   title = {Enabling mechano-intelligence in adaptive structures utilizing physical computing},
   volume = {12043},
   url = {https://www.spiedigitallibrary.org/conference-proceedings-of-spie/12043/1204317/Enabling-mechano-intelligence-in-adaptive-structures-utilizing-physical-computing/10.1117/12.2614439.full https://www.spiedigitallibrary.org/conference-proceedings-of-spie/12043/1204317/Enabling-mechano-intelligence-in-adaptive-structures-utilizing-physical-computing/10.1117/12.2614439.short},
